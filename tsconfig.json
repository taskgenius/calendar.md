{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "importHelpers": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "isolatedModules": true,
    "lib": ["DOM", "ES2018", "ScriptHost"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2018",
    "esModuleInterop": true,
    "declaration": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
